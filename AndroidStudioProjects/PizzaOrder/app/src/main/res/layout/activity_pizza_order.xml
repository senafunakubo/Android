<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.senafunakubo.pizzaorder.PizzaOrder"
    android:background="#68C3D4">


      <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIZZA ORDER"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:textStyle="bold" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
        android:id="@+id/textView2"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="70dip"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

      <EditText
        android:id="@+id/editText"
        android:layout_width="150dip"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dip"
         />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:text="SIZE"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="80dip"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="TOPPING"
            android:layout_marginLeft="220dip"
            android:layout_marginTop="80dip"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <RadioGroup android:id="@+id/radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/radiobutton_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="120dip"
                android:text="REGULAR" />
            <RadioButton android:id="@+id/radiobutton_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:text="MEDIUM" />
            <RadioButton android:id="@+id/radiobutton_la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:text="LARGE" />
        </RadioGroup>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="75sp"
                android:layout_marginLeft="-10dip"
                android:background="#777" />

        </LinearLayout>


        <CheckBox android:id="@+id/checkbox_pe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dip"
            android:layout_marginTop="120dip"
            android:text="Pepperoni" />

        <CheckBox android:id="@+id/checkbox_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dip"
            android:layout_marginTop="150dip"
            android:text="Mushroom" />

        <CheckBox android:id="@+id/checkbox_bl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dip"
            android:layout_marginTop="180dip"
            android:text="Black Olives" />

        <CheckBox android:id="@+id/checkbox_pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dip"
            android:layout_marginTop="210dip"
            android:text="Pineapple" />


        <TextView
            android:id="@+id/textView_name"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="NAME:"
            android:layout_marginTop="270dip"
            android:layout_marginLeft="130dip" />

        <TextView
            android:id="@+id/textView_personName"
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:layout_marginTop="270dip"
            android:layout_marginLeft="200dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_order"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="Your order is..."
            android:layout_marginTop="300dip"
            android:layout_marginLeft="130dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_size"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="SIZE:"
            android:layout_marginTop="330dip"
            android:layout_marginLeft="130dip" />

        <TextView
            android:id="@+id/textView_sizeReal"
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:text="Size"
            android:layout_marginTop="330dip"
            android:layout_marginLeft="200dip"
            />

        <TextView
            android:id="@+id/textView_topping"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="TOPPING:"
            android:layout_marginTop="355dip"
            android:layout_marginLeft="130dip" />

        <TextView
            android:id="@+id/textView_toppingReal"
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:text="None"
            android:layout_marginTop="355dip"
            android:layout_marginLeft="200dip"
            />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="PRICE:"
            android:layout_marginTop="390dip"
            android:layout_marginLeft="130dip" />

        <TextView
            android:id="@+id/textView_priceReal"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="$0"
            android:layout_alignBaseline="@+id/textView_price"
            android:layout_alignBottom="@+id/textView_price"
            android:layout_toRightOf="@+id/textView_price"
            android:layout_toEndOf="@+id/textView_price" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="425dip"
            android:background="#ff2fa0ff"
            android:onClick="createOrder"
            android:text="Order"
            android:textColor="#fff" />
    </RelativeLayout>


</LinearLayout>
