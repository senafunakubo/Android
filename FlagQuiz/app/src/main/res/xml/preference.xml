<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="Number of Choices"
        android:key="Choices"
        android:summary="Display 2,4,6 or 8 guess buttons"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues"
        />

    <MultiSelectListPreference
        android:title="Regions"
        android:key="Regions"
        android:summary="Regions to include in the quiz"
        android:defaultValue="@array/listValues2"
        android:entries="@array/listArray2"
        android:entryValues="@array/listValues2"
        />
</PreferenceScreen>