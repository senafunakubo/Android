<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/LinearEx"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:gravity="center"
        android:text="LINEAR LAYOUT" />

    <ImageView
        android:id="@+id/LinearImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:src="@drawable/linearlayout" />

    <TextView
        android:id="@+id/LinearSe"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:text="@string/linear1" />

    <TextView
        android:id="@+id/LinearSe2"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/linear2" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/linearBtnA"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:text="TOP"
            android:background="@color/blue"
        />

        <Button
            android:id="@+id/linearBtnB"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="225sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:text="NEXT"
            android:background="@color/blue"
        />
    </RelativeLayout>

</LinearLayout>