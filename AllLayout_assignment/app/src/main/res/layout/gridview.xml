<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gridEx"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:gravity="center"
        android:text="GRIDVIEW" />

    <ImageView
        android:id="@+id/gridImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:src="@drawable/gridview" />

    <TextView
        android:id="@+id/gridSe"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:text="@string/gridView" />

    <TextView
        android:id="@+id/gridSe2"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/GridBtnA"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:text="PREVIOUS"
            android:background="@color/blue"
            />

        <Button
            android:id="@+id/GridBtnB"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="225sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:text="NEXT"
            android:background="@color/blue"
            />
    </RelativeLayout>

</LinearLayout>